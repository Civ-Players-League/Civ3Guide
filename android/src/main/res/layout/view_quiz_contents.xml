<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.ScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                tools:text="This is the title"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/puzzle_height"
                android:scaleType="fitCenter"
                android:foregroundGravity="center"
                android:importantForAccessibility="no"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="8dp"
                android:layout_gravity="center"
                tools:src="@drawable/civ3puzzle1"/>

            <RadioGroup
                android:id="@+id/answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="16dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/answer0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="16dp"
                    android:textAppearance="?textAppearanceBody1"
                    tools:text="First answer"/>

                <RadioButton
                    android:id="@+id/answer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="16dp"
                    android:textAppearance="?textAppearanceBody1"
                    tools:text="Second answer"/>

                <RadioButton
                    android:id="@+id/answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="16dp"
                    android:textAppearance="?textAppearanceBody1"
                    tools:text="Third answer"/>

                <RadioButton
                    android:id="@+id/answer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="16dp"
                    android:textAppearance="?textAppearanceBody1"
                    tools:text="Fourth answer"/>

            </RadioGroup>

            <TextView
                android:id="@+id/explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:textAppearance="?textAppearanceBody1"
                tools:text="Correct!"/>

            <Button
                android:id="@+id/bottom_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:text="Next"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

        </LinearLayout>

</merge>